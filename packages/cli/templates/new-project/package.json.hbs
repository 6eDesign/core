{
  "name": "{{projectScope}}{{#if projectScope}}/{{/if}}{{projectName}}",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "localcontainers": "[ ! -f docker-compose.yml ] || docker compose up -d --wait",
    "pretest": "pnpm run localcontainers",
    "test": "turbo test",
    "predev": "pnpm run localcontainers",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo run check-types",
    "graph:order": "pnpm turbo run build --graph | pnpm --filter {{projectScope}}/graph-util exec node ./dist/index.js",
    "release": "turbo run build && changeset publish",
    "version": "changeset version",
    "postversion": "CI=false pnpm install"
  },
  "author": "",
  "license": "ISC",
  "description": "{{projectDescription}}",
  "workspaces": [
    "packages/**",
    "apps/**"
  ],
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.4.2",
    "typescript": "^5.9.2",
    "@changesets/cli": "^2.27.1"
  },
  "packageManager": "pnpm@{{pnpmVersion}}",
  "pnpm": {
    "neverBuiltDependencies": [],
    "overrides": {
      "uri-js": "npm:uri-js-replace"
    }
  },
  "dependencies": {
    "zod": "^4.0.5"
  }
}