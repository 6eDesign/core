{
  "name": "@6edesign/core-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "description": "Shared packages and reusable workflows for 6edesign projects.",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "release": "turbo run build && changeset publish",
    "version": "changeset version && CI=false pnpm install"
  },
  "devDependencies": {
    "@6edesign/cli": "workspace:^0.1.10",
    "@changesets/cli": "^2.27.1",
    "turbo": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "packages/*"
  ]
}